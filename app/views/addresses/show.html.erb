<h1>Address</h1>
<% @location.addresses.each do |address| %>
  <div class="card-panel hoverable">
        <h3><%= address.street %></h3>
        <h3><%= address.city %></h3>
        <h3><%= address.state %></h3>
        <h3><%= address.zip %></h3>
        <%= link_to "Edit Address", edit_location_address_path(@location, address), class: "ui basic teal button" %>
        <%= link_to "Delete Address", [@location, address], method: :delete, class: "ui basic teal button" %>
<% end %>
  </div>

  <br />

<%= link_to "Back", location_addresses_path(@location), class: "ui basic teal button" %>
