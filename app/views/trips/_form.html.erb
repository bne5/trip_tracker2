<h1><%= @trip.id ? "Edit Trip" : "Create Trip" %></h1>
<hr />
<%= form_with(model: @trip, local: true, class: "ui form") do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <br />
  <%= f.label :start_date %>
  <%= f.datetime_select :start_date, required: true %>
  <br />
  <%= f.label :end_date %>
  <%= f.datetime_select :end_date, required: true %>
  <br />
  <%= f.submit %>
<% end %>

  <%= link_to "Back", trips_path %>